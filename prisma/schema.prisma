// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id   String @id @default(uuid())
  name String

  goals Goal[]
}

model Goal {
  id           String   @id @default(uuid())
  sportType    String
  kilometers   Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  goalFinished DateTime

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
